<html>
<head>
  <title>Rule violations graph</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css" media="screen"/>
  <link rel="stylesheet" type="text/css" href="/stylesheets/bootswatch.css"/>

  <%= javascript_include_tag("jquery-1.8.2") %>
  <%= javascript_include_tag("highcharts") %>
  <%#= javascript_include_tag("exporting") %>

  <script>
    var x_axis = []
    var y_axis = []
    <% @data['x'] .each do |x| %>
      x_axis.push('<%= x %>')
    <% end %>

    <% @data['y'] .each do |y| %>
      y_axis.push(<%= y %>)
    <% end %>

    $(function () {
    $('#container').highcharts({
        chart: {
            type: 'spline'
        },
        title: {
            text: ''
        },

        xAxis: {
            categories: x_axis
        },
        yAxis: {
            title: {
                text: 'Number of Violations'
            }
        },
        credits: {
          enabled: false
        },

        plotOptions: {
            line: {
                dataLabels: {
                    /*enabled: true*/
                },
                enableMouseTracking: false
            }
        },
        series: [{
            name: 'Date',
            data: y_axis
        }]
    });
});

  </script>
  <style>

  </style>
</head>
<body>
  <div id="container" style="min-width: 310px; height: 250px; margin: 0 auto"></div>
</body>
</html>
